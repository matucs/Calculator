{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "src/registerServiceWorker.ts",
      "src/index.tsx"
    ]
  },
  "rules": {
    "curly": false,
    "interface-name": false,
    "no-any": true,
    "no-var-keyword": true,
    "object-literal-sort-keys": false,
    "jsx-no-lambda": false,
    "quotemark": false,
    "semicolon": false,
    "trailing-comma": false,
    "typedef": [
      true,
      "call-signature"
    ]
  }
}